modules = ["python-3.11", "nodejs-20", "web", "python3"]
run = "node index.js"

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "redis", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Redis Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Celery Worker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Dashboard"

[[workflows.workflow]]
name = "Redis Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server ./redis.conf"
waitForPort = 6379

[[workflows.workflow]]
name = "Frontend Production"
author = 44402949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next start -p 3000"

[[workflows.workflow]]
name = "Celery Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "celery -A tasks.celery_config:celery_app worker --loglevel=info"

[[workflows.workflow]]
name = "Frontend Development"
author = 44471615
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next dev -p 3000"

[[workflows.workflow]]
name = "Complete Dashboard"
author = 44488805
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src && npm install && npm run dev"

[[workflows.workflow]]
name = "Vite Dashboard"
author = 44488805
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import uvicorn; uvicorn.run('main:app', host='0.0.0.0', port=8000, reload=True)\""

[[workflows.workflow]]
name = "React Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --config vite.replit.config.ts --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Full Development"
author = 44603870
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import uvicorn; uvicorn.run('main:app', host='0.0.0.0', port=8000, reload=True)\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --config vite.replit.config.ts --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "FastAPI Server Restart"
author = 44603870
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import uvicorn; uvicorn.run('main:app', host='0.0.0.0', port=8000, reload=True)\""

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
run = ["sh", "-c", "node index.js"]
