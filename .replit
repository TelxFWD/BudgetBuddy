modules = ["python-3.11", "nodejs-20"]
run = "node index.js"

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "libxcrypt", "redis", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Redis Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Celery Worker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Enhanced Telegram Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Frontend"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import uvicorn; uvicorn.run('main:app', host='0.0.0.0', port=5000, reload=True)\""
waitForPort = 5000

[[workflows.workflow]]
name = "Redis Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server ./redis.conf"
waitForPort = 6379

[[workflows.workflow]]
name = "Frontend Production"
author = 44402949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next start -p 3000"

[[workflows.workflow]]
name = "Celery Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "celery -A tasks.celery_config:celery_app worker --loglevel=info"

[[workflows.workflow]]
name = "Enhanced Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python telegram_bot_enhanced.py"

[[workflows.workflow]]
name = "Next.js Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next dev -p 3000"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
run = ["sh", "-c", "node index.js"]
