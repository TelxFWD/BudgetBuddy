modules = ["python-3.11", "nodejs-20", "web", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "libxcrypt", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Dashboard"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
